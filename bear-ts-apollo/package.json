{
  "name": "bear-ts-apollo",
  "version": "0.0.1",
  "description": "TypeScript Express Apollo 项目模板",
  "scripts": {
    "initialize": "bash ./scripts/init.sh",
    "start": "tsc && yarn start:dev",
    "build": "tsc && yarn build:next",
    "start:dev": "cross-env NODE_ENV=development concurrently \"yarn watch:tsc\" \"yarn start:next\"",
    "start:prod": "yarn build && cross-env NODE_ENV=production yarn start:next",
    "watch:tsc": "tsc --watch",
    "build:tsc": "tsc",
    "start:next": "cd build && nodemon server/start.js --watch server --exec",
    "build:next": "cd build && next build",
    "clean": "rimraf node_modules",
    "clear": "rimraf build",
    "pstart": "yarn start && yarn open",
    "open": "opn \"http://localhost:9000\"",
    "tsc": "yarn clear && tsc",
    "tsc:w": "yarn clear && tsc -w",
    "test": "mocha server/src/**/*.test.ts --opts mocha.opts",
    "lint": "tslint src/**/*.ts"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "debug": "^2.6.3",
    "express": "^4.15.3",
    "express-session": "^1.15.4",
    "body-parser": "^1.17.2",
    "helmet": "^3.8.1",
    "compression": "^1.7.0",
    "graphql": "^0.10.5",
    "graphql-server-express": "^1.0.5",
    "graphql-tools": "^1.1.0",
    "graphql-errors": "^2.1.0",
    "express-promise-router": "^2.0.0",
    "morgan": "^1.8.2",
    "knex": "^0.13.0",
    "objection": "^0.8.7",
    "mysql": "^2.13.0",
    "pg": "^7.0.2",
    "lodash": "^4.17.4",
    "next": "^3.0.3",
    "next-routes": "^1.0.40",
    "next-redux-saga": "^1.0.1",
    "next-redux-wrapper": "^1.3.2",
    "react": "^15.6.1",
    "react-apollo": "^1.4.10",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "recompose": "^0.24.0",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "styled-components": "^2.1.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/bluebird-global": "^3.5.3",
    "@types/body-parser": "^1.16.4",
    "@types/express": "^4.0.36",
    "@types/knex": "^0.0.56",
    "@types/lodash": "^4.14.70",
    "@types/morgan": "^1.7.32",
    "@types/mocha": "^2.2.41",
    "@types/chai": "^4.0.1",
    "@types/node": "^8.0.24",
    "@types/should": "^8.3.0",
    "@types/next": "^2.4.2",
    "mocha": "^3.3.0",
    "chai": "^3.5.0",
    "should": "11.2.1",
    "supertest": "^1.2.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.4.2",
    "opn-cli": "^3.1.0",
    "concurrently": "^3.1.0",
    "nodemon": "^1.11.0",
    "cross-env": "^5.0.1",
    "rimraf": "^2.5.4",
    "copyfiles": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thoughtbit/node-web-starter/bear-ts-express.git"
  },
  "author": {
