{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "jsx": "react",
    "lib": ["dom","es6", "es7"],
    "types": [
      "lodash",
      "mocha",
      "node",
      "should"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./build",
    "rootDir": "./"
  },
  "filesGlob": [
    "./**/*.tsx?",
    "!./**/tests/*"
  ],
  "files": [
    "./client/types/styled-jsx.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "typings",
    "**/*.test.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
