    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/helmet": "^0.0.36",
    "@types/compression": "^0.0.33",
    "@types/morgan": "^1.7.32",
    "@types/knex": "^0.0.56",
    "@types/lodash": "^4.14.70",
    "@types/mocha": "^2.2.41",
    "@types/chai": "^4.0.1",
    "@types/node": "^8.0.24",
    "@types/should": "^8.3.0",
    "@types/nunjucks":"^0.0.32",
    "@types/consolidate":"^0.0.33",
    "@types/passport": "^0.3.3",
    "@types/passport-facebook": "^2.1.3",
    "@types/request": "0.0.45",
    "@types/nodemailer": "^3.1.0",
    "@types/supertest": "^2.0.0",
