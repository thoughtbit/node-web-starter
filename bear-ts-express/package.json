{
  "name": "bear-ts-express",
  "version": "0.0.1",
  "description": "TypeScript Express 项目模板",
  "scripts": {
    "initialize": "bash ./scripts/init.sh",
    "start": "tsc && yarn start:dev",
    "build": "yarn build:tsc",
    "start:dev": "cross-env NODE_ENV=development concurrently \"yarn watch:tsc\" \"yarn start:next\" \"yarn copy:server\" \"yarn copy:public\"",
    "start:prod": "yarn build && cross-env NODE_ENV=production yarn start:next",
    "watch:tsc": "tsc --watch",
    "build:tsc": "tsc",
    "start:next": "cd build && nodemon server/start.js --watch server --exec",
    "copy:server": "copyfiles server/**/*.json server/**/*.html build",
    "copy:public": "cp -r server/public build/server/",
    "clean": "rimraf node_modules",
    "clear": "rimraf build",
    "pstart": "yarn start && yarn open",
    "open": "opn \"http://localhost:9000\"",
    "tsc": "yarn clear && tsc",
    "tsc:w": "yarn clear && tsc -w",
    "test": "mocha server/src/**/*.test.ts --opts mocha.opts",
    "lint": "tslint src/**/*.ts"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "debug": "^2.6.3",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.15.3",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.5",
    "express-validator": "^3.1.3",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "helmet": "^3.8.1",
    "compression": "^1.7.0",
    "lusca": "^1.4.1",
    "passport": "0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "graphql": "^0.10.5",
    "graphql-server-express": "^1.0.5",
    "graphql-tools": "^1.1.0",
    "graphql-errors": "^2.1.0",
    "express-promise-router": "^2.0.0",
    "morgan": "^1.8.2",
    "knex": "^0.13.0",
    "objection": "^0.8.7",
    "mysql": "^2.13.0",
    "pg": "^7.0.2",
    "lodash": "^4.17.4",
    "consolidate":"^0.14.5",
    "nunjucks": "^3.0.1",
    "request": "^2.78.0",
    "nodemailer": "^4.0.1"
  },
