{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "lib": [
      "es6",
      "es7"
    ],
    "types": [
      "lodash",
      "mocha",
      "node",
      "should"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./build",
    "rootDir": "./"
  },
  "exclude": [
    "node_modules",
    "build",
    "typings",
    "**/*.test.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
