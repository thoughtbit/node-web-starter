{
  "name": "nest-boilerplate",
  "version": "0.0.1",
  "description": "NestJS 项目模板",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=dev ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=dev nodemon",
    "start:debug": "NODE_ENV=dev nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "NODE_ENV=prod node dist/main",
    "start:hmr": "node dist/server",
    "webpack": "cross-env NODE_ENV=prod webpack --progress --colors --config webpack.config.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/platform-express": "^6.1.1",
    "@nestjs/typeorm": "^6.1.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "crypto": "^1.0.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "csurf": "^1.10.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.5.0",
    "swagger-ui-express": "^4.0.2",
    "helmet": "^3.18.0",
    "nodemailer": "^6.1.1",
    "js-yaml": "^3.13.1",
    "joi": "^14.3.1",

    "rimraf": "^2.6.3",
    "rxjs": "^6.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@types/nodemailer": "^4.6.8",
    "@types/joi": "^14.3.3",
    "@types/js-yaml": "3.12.1",
    "@nestjs/testing": "^6.0.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "ts-loader": "^5.4.5",
    "typescript": "^3.2.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.7.2",
    "clean-webpack-plugin": "^2.0.1"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
